<controller></controller>

<div class="searchbar-wrapper">
  <searchbar></searchbar>
</div>

<div class="card-container">
  <% @projects.select {|proj| proj.visibility == true}.reverse_each do |proj|  %>
    <card
      name="<%= proj.name %>"
      description="<%= proj.description %>"
      id="<%= proj.id %>"
      img="<%= proj.images[0].url if proj.images.present? %>"
      mycsrf="<%= form_authenticity_token %>"
      posturl="featured"
      slug="<%= proj.slug %>">
    </card>
  <% end %>
</div>


  <% @projects.select {|proj| proj.visibility == true}.reverse_each do |proj|  %>
    <list
      name="<%= proj.name %>"
      description="<%= proj.description %>"
      id="<%= proj.id %>"
      img="<%= proj.images[0].url if proj.images.present? %>"
      mycsrf="<%= form_authenticity_token %>"
      posturl="featured"
      currentpage="<%= request.url %>"
      slug="<%= proj.slug %>"
      datecreate="<%= proj.created_at.strftime("%d-%b-%Y at %I:%M%p") %>"
      dateupdate="<%= proj.updated_at.strftime("%d-%b-%Y at %I:%M%p") %>">
    </list>
  <% end %>
</div>
