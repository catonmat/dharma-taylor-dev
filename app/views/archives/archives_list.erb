<% @images = [] %>
<% @archives.each do |proj|%>
  <% proj.images.each { |img| @images << img} %>
<% end %>
<b-container fluid>
  <%-@images.each_slice(6) do |group| %>
    <b-form-row>
      <%-group.each do |photo|%>
        <b-col cols="4" sm="4" lg="2">
          <b-img class="archive-image-card" src="<%=cl_image_path photo.url%>" alt="<%="#{photo.url.split('_').first}"%>" fluid @click="showModal"></b-img>
        </b-col>
      <%end%>
    </b-form-row>
  <%end%>
</b-container>
